<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h3 class="profile-name">User info</h3>
			<thead>
				<tr>
					<th>
						<%= attachment_image_tag @user, :profile_image , :fill, 100, 100, format: 'jpeg',fallback: 'no_image.jpg' %>
					</th>
				</tr>
				<tr>
					<th>name:<%= @user.name %></th>
				</tr>
				<tr>
					<th>introduction:<%= @user.introduction %></th>
				</tr>
			</thead>
		</table>
		<%= link_to "",edit_user_path(@user),class:"glyphicon glyphicon-wrench" %>
		<h2>New book</h2>
		<%= render "books/form"%>
	</div>

	<div class="col-xs-9">
		<h1>Books</h1>
		<table class="table">
			<thead>
				<tr>
					<th></<th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user, :profile_image , :fill, 10, 10, format: 'jpeg',fallback: 'no_image.jpg' %></td>
					<td><%= link_to book.title, book_path(book) %></td>
					<td><%=book.body %></td>
				</tr>
				<% end %>
			</table>
		</div>

	</div>
</div>

