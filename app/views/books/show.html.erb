<div class="container">
  <div class="row">
    <div class="col-xs-3">
        <h3 class="profile-name">User info</h3>
          <table class="table">
            <thead>
            <tr>
            <th>
                <%= attachment_image_tag @book.user, :profile_image , :fill, 100, 100, format: 'jpeg',fallback: 'no_image.jpg' %>
              <%= %></th>
            </tr>
            <tr>
            <th>name:<%= @book.user.name %></th>
            </tr>
            <tr>
            <th>introduction:<%= @book.user.introduction %></th>
          </tr>
          </thead>
          </table>
          <%= link_to "",edit_user_path(current_user),class:"glyphicon glyphicon-wrench" %>
        <h2>New book</h2>
        <%= render "books/form"%>
    </div>
    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
        <tr>
        <td>
      <%= link_to user_path(@book.user) do %>
       <%= attachment_image_tag @book.user, :profile_image , :fill, 10, 10, format: 'jpeg',fallback: 'no_image.jpg' %>
          <br>
          <%= @book.user.name%>
      <% end %>
          </td>
          <td><%=@book.title %></td>
           <td><%=@book.body %></td>
        <% if @book.user.id == current_user.id %>
           <td><%= link_to 'Edit', edit_book_path(@book) %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete ,data: { confirm: '本当に消しますか？' }  %></td>
        <% end %>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
